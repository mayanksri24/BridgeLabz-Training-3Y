//1: Employee Details
package com.bridgelabz.oops.levelone;

public class EmployeeInfo {
    String empName;
    int empId;
    double empSalary;

    // Constructor
    EmployeeInfo(String name, int id, double salary) {
        empName = name;
        empId = id;
        empSalary = salary;
    }

    // Method to show details
    void showDetails() {
        System.out.println("Name : " + empName);
        System.out.println("ID   : " + empId);
        System.out.println("Salary : " + empSalary);
    }

    public static void main(String[] args) {
        EmployeeInfo e1 = new EmployeeInfo("Sohan", 101, 45000);
        e1.showDetails();
    }
}

//2: Circle (Area & Circumference)
package com.bridgelabz.oops.levelone;

public class CircleInfo {
    double r;

    CircleInfo(double r) {
        this.r = r;
    }

    double computeArea() {
        return Math.PI * r * r;
    }

    double computeCircumference() {
        return 2 * Math.PI * r;
    }

    public static void main(String[] args) {
        CircleInfo c = new CircleInfo(3.2);
        System.out.printf("Area = %.2f\n", c.computeArea());
        System.out.printf("Circumference = %.2f\n", c.computeCircumference());
    }
}

//3: Book Details
package com.bridgelabz.oops.levelone;

public class BookInfo {
    String title;
    String writer;
    double cost;

    // constructor
    BookInfo(String t, String w, double c) {
        title = t;
        writer = w;
        cost = c;
    }

    void printBook() {
        System.out.println("Book Title : " + title);
        System.out.println("Author     : " + writer);
        System.out.println("Price      : " + cost);
        System.out.println("-------------------");
    }

    public static void main(String[] args) {
        BookInfo b1 = new BookInfo("Harry Potter", "J.K. Rowling", 799);
        BookInfo b2 = new BookInfo("The Alchemist", "Paulo Coelho", 499);

        b1.printBook();
        b2.printBook();
    }
}

//4: Items Inventory
package com.bridgelabz.oops.levelone;

public class InventoryItem {
    String code;
    String name;
    double unitPrice;

    // constructor
    InventoryItem(String code, String name, double unitPrice) {
        this.code = code;
        this.name = name;
        this.unitPrice = unitPrice;
    }

    void displayItem(int qty) {
        double total = qty * unitPrice;
        System.out.println("Item Code : " + code);
        System.out.println("Item Name : " + name);
        System.out.println("Unit Price: " + unitPrice);
        System.out.println("Quantity  : " + qty);
        System.out.println("Total Cost: " + total);
        System.out.println("-----------------------");
    }

    public static void main(String[] args) {
        InventoryItem i1 = new InventoryItem("A01", "Notebook", 50);
        InventoryItem i2 = new InventoryItem("B07", "Pen", 10);

        i1.displayItem(5);
        i2.displayItem(12);
    }
}

//5: Mobile Phone Details
package com.bridgelabz.oops.levelone;

public class Phone {
    String company;
    String modelName;
    double cost;

    Phone(String company, String model, double cost) {
        this.company = company;
        this.modelName = model;
        this.cost = cost;
    }

    void showPhone() {
        System.out.println("Company : " + company);
        System.out.println("Model   : " + modelName);
        System.out.println("Price   : " + cost);
        System.out.println("=======================");
    }

    public static void main(String[] args) {
        Phone p1 = new Phone("Samsung", "Galaxy S24", 84999);
        Phone p2 = new Phone("Apple", "iPhone 15", 99999);
        Phone p3 = new Phone("Xiaomi", "Mi 12 Pro", 44999);

        p1.showPhone();
        p2.showPhone();
        p3.showPhone();
    }
}

//6:Student Report
package com.bridgelabz.oops.leveltwo;

public class StudentReport {
    private String studentName;
    private String rollNo;
    private double[] subjectMarks;

    // Constructor
    public StudentReport(String studentName, String rollNo, double[] subjectMarks) {
        this.studentName = studentName;
        this.rollNo = rollNo;
        this.subjectMarks = subjectMarks;
    }

    // Method to compute average
    private double getAverage() {
        double total = 0;
        for (double m : subjectMarks) {
            total += m;
        }
        return total / subjectMarks.length;
    }

    // Method to calculate grade
    private String findGrade() {
        double avg = getAverage();
        if (avg >= 85) return "A";
        else if (avg >= 70) return "B";
        else if (avg >= 55) return "C";
        else if (avg >= 40) return "D";
        else return "F";
    }

    // Method to print details
    public void showReport() {
        System.out.println("Name: " + studentName);
        System.out.println("Roll No: " + rollNo);
        System.out.print("Marks: ");
        for (double m : subjectMarks) {
            System.out.print(m + " ");
        }
        System.out.println("\nGrade: " + findGrade());
        System.out.println("----------------------");
    }

    public static void main(String[] args) {
        double[] m1 = {90, 80, 85};
        double[] m2 = {50, 60, 55};

        StudentReport s1 = new StudentReport("Ravi", "ME001", m1);
        StudentReport s2 = new StudentReport("Sneha", "IT002", m2);

        s1.showReport();
        s2.showReport();
    }
}

//7:Bank Account ATM
package com.bridgelabz.oops.leveltwo;

public class ATMAccount {
    private String holderName;
    private String accNo;
    private double balance;

    // Constructor
    public ATMAccount(String holderName, String accNo, double balance) {
        this.holderName = holderName;
        this.accNo = accNo;
        this.balance = balance;
    }

    public void credit(double amount) {
        if (amount > 0) {
            balance += amount;
            System.out.println(amount + " deposited successfully.");
        } else {
            System.out.println("Invalid deposit amount.");
        }
    }

    public void debit(double amount) {
        if (amount > 0 && amount <= balance) {
            balance -= amount;
            System.out.println(amount + " withdrawn successfully.");
        } else {
            System.out.println("Transaction failed! Check balance or amount.");
        }
    }

    public void checkBalance() {
        System.out.println("Balance: " + balance);
    }

    public static void main(String[] args) {
        ATMAccount acc1 = new ATMAccount("Arun", "ACC1001", 1500);
        acc1.checkBalance();
        acc1.credit(500);
        acc1.checkBalance();
        acc1.debit(700);
        acc1.checkBalance();
        acc1.debit(2000); // invalid
    }
}

//8:Palindrome Checker
package com.bridgelabz.oops.leveltwo;

public class StringPalindrome {
    private String data;

    public StringPalindrome(String data) {
        this.data = data;
    }

    public boolean checkPalindrome() {
        String clean = data.replaceAll("\\s+", "").toLowerCase();
        int i = 0, j = clean.length() - 1;
        while (i < j) {
            if (clean.charAt(i) != clean.charAt(j)) return false;
            i++;
            j--;
        }
        return true;
    }

    public void printResult() {
        if (checkPalindrome())
            System.out.println("\"" + data + "\" is a Palindrome.");
        else
            System.out.println("\"" + data + "\" is NOT a Palindrome.");
    }

    public static void main(String[] args) {
        StringPalindrome p1 = new StringPalindrome("Never odd or even");
        StringPalindrome p2 = new StringPalindrome("Java Programming");

        p1.printResult();
        p2.printResult();
    }
}

//9:Movie Ticket Booking
package com.bridgelabz.oops.leveltwo;

public class TicketBooking {
    private String movie;
    private String seat;
    private double cost;
    private boolean booked;

    public TicketBooking(String movie) {
        this.movie = movie;
        this.booked = false;
    }

    public void reserveSeat(String seat, double cost) {
        if (!booked) {
            this.seat = seat;
            this.cost = cost;
            this.booked = true;
            System.out.println("Booking Successful: " + movie + " - Seat " + seat + " ($" + cost + ")");
        } else {
            System.out.println("Sorry! Ticket already booked.");
        }
    }

    public void showTicket() {
        if (booked) {
            System.out.println("Movie: " + movie + " | Seat: " + seat + " | Price: $" + cost);
        } else {
            System.out.println("No ticket booked yet.");
        }
    }

    public static void main(String[] args) {
        TicketBooking t1 = new TicketBooking("Avengers");
        t1.showTicket();
        t1.reserveSeat("C5", 250);
        t1.reserveSeat("C6", 250); // already booked
        t1.showTicket();
    }
}

//10:Shopping Cart
package com.bridgelabz.oops.leveltwo;

public class ShoppingCart {
    private String product;
    private double price;
    private int qty;

    public ShoppingCart(String product, double price, int qty) {
        this.product = product;
        this.price = price;
        this.qty = qty;
    }

    public void add(int q) {
        qty += q;
        System.out.println(q + " " + product + "(s) added.");
    }

    public void remove(int q) {
        if (q <= qty) {
            qty -= q;
            System.out.println(q + " " + product + "(s) removed.");
        } else {
            System.out.println("Not enough quantity to remove.");
        }
    }

    public void showTotal() {
        System.out.println("Total for " + product + ": $" + (price * qty));
    }

    public void showDetails() {
        System.out.println("Item: " + product + " | Price: $" + price + " | Quantity: " + qty);
    }

    public static void main(String[] args) {
        ShoppingCart cart1 = new ShoppingCart("Phone", 15000, 1);
        cart1.showDetails();
        cart1.add(2);
        cart1.remove(1);
        cart1.showTotal();
    }
}























